generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String
  createdAt     DateTime @default(now())
  hostedGames   Game[]   @relation("HostRelation")
  opponentGames Game[]   @relation("OpponentRelation")
  spectating    Game[]   @relation("SpectatorRelation")
  wonGames      Game[]   @relation("WinnerRelation")
}

model Game {
  id         String   @id @default(cuid())
  inviteCode String   @unique
  boardState String
  host       User     @relation("HostRelation", fields: [hostId], references: [id])
  opponent   User?    @relation("OpponentRelation", fields: [opponentId], references: [id])
  hostId     String
  opponentId String?
  completed  Boolean  @default(false)
  winner     User?    @relation("WinnerRelation", fields: [winnerId], references: [id])
  winnerId   String?
  createdAt  DateTime @default(now())
  spectators User[]   @relation("SpectatorRelation")
}
